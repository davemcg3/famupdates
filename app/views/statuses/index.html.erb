<h1>Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Profile</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <tr>
        <td><%= status.content %></td>
        <td><%= link_to status.profile.name, status.profile %></td>
<!--        <td><%#= link_to 'Show', status %></td>-->
        <% if current_user.profiles.first == status.profile %>
          <td><%= link_to 'Edit', edit_status_path(status) %></td>
          <td><%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
