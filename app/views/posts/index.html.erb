<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Profile</th>
      <th>Author</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= link_to post.profile.name, post.profile %></td>
        <td><%= link_to post.author.name, post.author %></td>
<!--        <td><%#= link_to 'Show', post %></td>-->
        <% if current_user.profiles.first == post.author %>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
